{
  "name": "@specla/autoloader",
  "version": "1.0.0",
  "description": "Autoloader for modules and json files for Node.js",
  "main": "lib/Autoloader.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "test": "npm run lint && mocha --recursive test",
    "test:watch": "mocha --watch --recursive",
    "lint": "standard | snazzy",
    "lint:fix": "standard --fix | snazzy",
    "coverage": "nyc report --reporter=text-lcov | coveralls",
    "prepublish": "npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Specla/Autoloader.git"
  },
  "files": [
    "README.md",
    "LICENSE",
    "lib/"
  ],
  "keywords": [
    "Specla",
    "Modules",
    "Autoloader",
    "json"
  ],
  "author": [
    {
      "name": "Frederik Kvartborg Albertsen",
      "url": "https://kvartborg.net"
    }
  ],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Specla/Autoloader/issues"
  },
  "homepage": "https://github.com/Specla/Autoloader#readme",
  "devDependencies": {
    "chai": "^3.5.0",
    "coveralls": "^2.13.1",
    "mocha": "^3.2.0",
    "nyc": "^11.0.3",
    "snazzy": "^6.0.0",
    "standard": "^8.6.0"
  }
}
